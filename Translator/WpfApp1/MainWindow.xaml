                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF898462" Offset="0.367"/>
                    <GradientStop Color="White"/>
                    <GradientStop Color="#FF83876B" Offset="0.057"/>
